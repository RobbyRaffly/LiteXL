<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/mud_dimens_20dp"/>
            <gradient
                android:startColor="@color/mud_palette_basic_light_grey"
                android:centerColor="@color/mud_palette_basic_light_grey"
                android:centerY="0.75"
                android:endColor="@color/mud_palette_basic_light_grey"
                android:angle="270"
                />
        </shape>
    </item>
    <item android:id="@+id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="@dimen/mud_dimens_20dp"/>
                <gradient
                    android:startColor="@color/mud_palette_default_bizon_four"
                    android:centerY="0.75"
                    android:endColor="@color/mud_palette_default_bizon_four"
                    android:angle="360"/>
            </shape>
        </scale>
    </item>

</layer-list>