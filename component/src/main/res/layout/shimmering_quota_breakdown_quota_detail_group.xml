<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/mud_palette_basic_white"
    app:cardCornerRadius="@dimen/mud_dimens_16dp"
    app:cardElevation="3dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_direction="left_to_right"
        app:shimmer_shape="linear">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/mud_dimens_16dp"
            android:paddingTop="21dp"
            android:paddingBottom="@dimen/mud_dimens_16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/mud_dimens_32dp"
                    android:layout_height="@dimen/mud_dimens_32dp"
                    android:layout_gravity="start"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_6dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false" />

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="start"
                app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                app:cardElevation="@dimen/mud_dimens_0dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="19dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/mud_dimens_24dp"
                    android:layout_height="@dimen/mud_dimens_24dp"
                    android:layout_gravity="start"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_6dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="79dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center_vertical"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_6dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="19dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/mud_dimens_24dp"
                    android:layout_height="@dimen/mud_dimens_24dp"
                    android:layout_gravity="start"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_6dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="79dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center_vertical"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_6dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="19dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/mud_dimens_24dp"
                    android:layout_height="@dimen/mud_dimens_24dp"
                    android:layout_gravity="start"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_6dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="79dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center_vertical"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_6dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="19dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/mud_dimens_24dp"
                    android:layout_height="@dimen/mud_dimens_24dp"
                    android:layout_gravity="start"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="136dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="56dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_6dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="79dp"
                    android:layout_height="21dp"
                    android:layout_gravity="end"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_6dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false" />

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/mud_dimens_36dp"
                android:layout_marginHorizontal="8dp"
                app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                app:cardCornerRadius="@dimen/mud_dimens_20dp"
                app:cardElevation="@dimen/mud_dimens_0dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false" />
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.cardview.widget.CardView>