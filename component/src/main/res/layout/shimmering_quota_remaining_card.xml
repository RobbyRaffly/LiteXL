<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mud_dimens_4dp"
        app:cardCornerRadius="@dimen/mud_dimens_16dp"
        app:cardElevation="@dimen/mud_dimens_3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_direction="left_to_right"
            app:shimmer_shape="linear">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/mud_dimens_16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/firstShimmer"
                    android:layout_width="72dp"
                    android:layout_height="@dimen/mud_dimens_16dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_6dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>



                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/leftCircle"
                    android:layout_width="@dimen/mud_dimens_24dp"
                    android:layout_height="@dimen/mud_dimens_24dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_12dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    android:layout_marginTop="@dimen/mud_dimens_8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/lineVerticalView"
                    app:layout_constraintTop_toTopOf="@id/lineVerticalView"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/leftText"
                    android:layout_width="72dp"
                    android:layout_height="@dimen/mud_dimens_16dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_6dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    android:layout_marginTop="@dimen/mud_dimens_8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/lineVerticalView"
                    app:layout_constraintTop_toBottomOf="@id/leftCircle"/>

                <View
                    android:id="@+id/lineVerticalView"
                    android:layout_width="@dimen/mud_dimens_1dp"
                    android:layout_height="64dp"
                    android:background="@color/mud_palette_basic_light_grey"
                    android:layout_marginTop="@dimen/mud_dimens_8dp"
                    app:layout_constraintTop_toBottomOf="@id/firstShimmer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/rightCircle"
                    android:layout_width="@dimen/mud_dimens_24dp"
                    android:layout_height="@dimen/mud_dimens_24dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_12dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    android:layout_marginTop="@dimen/mud_dimens_8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/lineVerticalView"
                    app:layout_constraintTop_toTopOf="@id/lineVerticalView"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/rightText"
                    android:layout_width="72dp"
                    android:layout_height="@dimen/mud_dimens_16dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_6dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    android:layout_marginTop="@dimen/mud_dimens_8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/lineVerticalView"
                    app:layout_constraintTop_toBottomOf="@id/rightCircle"/>



                <View
                    android:id="@+id/lineHorizontalView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mud_dimens_1dp"
                    android:background="@color/mud_palette_basic_light_grey"
                    app:layout_constraintTop_toBottomOf="@id/lineVerticalView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/secondShimmer"
                    android:layout_width="192dp"
                    android:layout_height="@dimen/mud_dimens_24dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_6dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    android:layout_marginTop="@dimen/mud_dimens_8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lineHorizontalView"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/thirdShimmer"
                    android:layout_width="@dimen/mud_dimens_24dp"
                    android:layout_height="@dimen/mud_dimens_24dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_12dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    android:layout_marginTop="@dimen/mud_dimens_8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lineHorizontalView"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>