<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/mud_dimens_16dp"
            android:paddingTop="@dimen/mud_dimens_16dp"
            android:paddingBottom="@dimen/mud_dimens_16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="72dp"
                    android:layout_height="18dp"
                    android:layout_marginBottom="@dimen/mud_dimens_6dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="@dimen/mud_dimens_0dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="168dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="@dimen/mud_dimens_6dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="@dimen/mud_dimens_0dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="168dp"
                    android:layout_height="18dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="@dimen/mud_dimens_0dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="85dp"
                    android:layout_height="28dp"
                    android:layout_marginBottom="@dimen/mud_dimens_8dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="18dp"
                    android:layout_centerVertical="true"
                    app:cardElevation="@dimen/mud_dimens_0dp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>