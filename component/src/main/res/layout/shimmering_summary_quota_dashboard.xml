<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/mud_dimens_16dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="72dp"
        android:layout_height="@dimen/mud_dimens_16dp"
        app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
        app:cardCornerRadius="@dimen/mud_dimens_8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mud_dimens_8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/mud_dimens_12dp">

            <LinearLayout
                android:layout_width="@dimen/mud_dimens_24dp"
                android:layout_height="@dimen/mud_dimens_24dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/mud_palette_basic_light_grey" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:minWidth="72dp"
                android:layout_height="@dimen/mud_dimens_16dp"
                android:layout_marginTop="@dimen/mud_dimens_8dp"
                app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                app:cardCornerRadius="6dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/mud_dimens_2dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/mud_dimens_8dp"
            android:layout_marginVertical="@dimen/mud_dimens_8dp"
            android:background="@color/mud_palette_basic_light_grey" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/mud_dimens_12dp">

            <LinearLayout
                android:layout_width="@dimen/mud_dimens_24dp"
                android:layout_height="@dimen/mud_dimens_24dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/mud_palette_basic_light_grey" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:minWidth="72dp"
                android:layout_height="@dimen/mud_dimens_16dp"
                android:layout_marginTop="@dimen/mud_dimens_8dp"
                app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                app:cardCornerRadius="6dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/mud_dimens_2dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/mud_dimens_8dp"
            android:background="@color/mud_palette_basic_light_grey" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/mud_dimens_12dp">

            <LinearLayout
                android:layout_width="@dimen/mud_dimens_24dp"
                android:layout_height="@dimen/mud_dimens_24dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/mud_palette_basic_light_grey" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/mud_dimens_8dp"
                android:minWidth="72dp"
                app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                app:cardCornerRadius="6dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mud_dimens_2dp"
        android:layout_marginVertical="@dimen/mud_dimens_8dp"
        android:background="@color/mud_palette_basic_light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="192dp"
            android:layout_height="@dimen/mud_dimens_24dp"
            android:layout_weight="0"
            app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
            app:cardCornerRadius="@dimen/mud_dimens_16dp"
            app:cardElevation="@dimen/mud_dimens_0dp" />
        <View
            android:layout_width="@dimen/mud_dimens_0dp"
            android:layout_height="@dimen/mud_dimens_24dp"
            android:layout_weight="1"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/mud_dimens_24dp"
            android:layout_height="@dimen/mud_dimens_24dp"
            android:layout_weight="0"
            app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
            app:cardCornerRadius="@dimen/mud_dimens_12dp"
            app:cardElevation="@dimen/mud_dimens_0dp" />
    </LinearLayout>
</LinearLayout>
