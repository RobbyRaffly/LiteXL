<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/firstShimmer"
        android:layout_width="72dp"
        android:layout_height="@dimen/mud_dimens_16dp"
        app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
        app:cardCornerRadius="6dp"
        app:cardElevation="@dimen/mud_dimens_0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/secondShimmer"
        android:layout_width="168dp"
        android:layout_height="@dimen/mud_dimens_24dp"
        app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
        app:cardCornerRadius="6dp"
        app:cardElevation="@dimen/mud_dimens_0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/firstShimmer"
        app:layout_constraintTop_toBottomOf="@id/firstShimmer" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/thirdShimmer"
        android:layout_width="168dp"
        android:layout_height="18dp"
        app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
        app:cardCornerRadius="6dp"
        app:cardElevation="@dimen/mud_dimens_0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/firstShimmer"
        app:layout_constraintTop_toBottomOf="@id/secondShimmer" />

    <View
        android:id="@+id/shimmerLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/mud_dimens_1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/mud_palette_basic_alto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdShimmer" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmerLine">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/fourthShimmer"
            android:layout_width="192dp"
            android:layout_height="@dimen/mud_dimens_24dp"
            app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
            app:cardCornerRadius="6dp"
            app:cardElevation="@dimen/mud_dimens_0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/lastShimmer"
            android:layout_width="@dimen/mud_dimens_24dp"
            android:layout_height="@dimen/mud_dimens_24dp"
            app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
            app:cardCornerRadius="@dimen/mud_dimens_12dp"
            app:cardElevation="@dimen/mud_dimens_0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/fourthShimmer" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>