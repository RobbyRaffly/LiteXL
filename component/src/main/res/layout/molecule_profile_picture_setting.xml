<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerView"
    android:layout_width="80dp"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:background="@color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/avatarContainerView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@color/transparent"
        app:strokeColor="@color/mud_palette_basic_white"
        app:strokeWidth="3.4dp"
        app:cardCornerRadius="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <com.myxlultimate.component.token.imageView.ImageView
            android:id="@+id/avatarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:imageSourceType="BITMAP"/>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/editView"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/mud_palette_pale_blue"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="4dp"
        android:elevation="2dp">
        <TextView
            style="@style/IconAppearance.MudComponents.Body3"
            android:textColor="?android:attr/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/xl_edit"/>
    </LinearLayout>

</RelativeLayout>