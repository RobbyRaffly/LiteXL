<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/mud_dimens_4dp"
    app:cardCornerRadius="@dimen/mud_dimens_16dp"
    app:cardElevation="@dimen/mud_dimens_3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/mud_dimens_24dp">

        <TextView
            android:id="@+id/iconView"
            style="@style/IconAppearance.MudComponents.H4"
            android:layout_width="@dimen/mud_dimens_16dp"
            android:layout_height="@dimen/mud_dimens_16dp"
            android:layout_gravity="end"
            android:text="@string/xl_close"
            android:textColor="@color/mud_palette_primary_blue" />

        <TextView
            android:id="@+id/titleView"
            style="@style/TextAppearance.MudComponents.H5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/mud_dimens_24dp"
            tools:text="Lengkapi informasi akun Anda\ndan dapatkan +200 Poin!" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/progressIconView"
                style="@style/IconAppearance.MudComponents.H2"
                android:layout_width="@dimen/mud_dimens_24dp"
                android:layout_height="@dimen/mud_dimens_24dp"
                android:gravity="center"
                android:text="@string/xl_profile" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/mud_dimens_8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginStart="@dimen/mud_dimens_8dp"
                android:layout_marginEnd="@dimen/mud_dimens_8dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="@dimen/mud_dimens_1dp"
                    android:background="@drawable/button_background"
                    android:backgroundTint="@color/mud_palette_basic_light_grey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <View
                        android:id="@+id/progressView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_background"
                        android:backgroundTint="@color/mud_palette_prepaid_turquoise"
                        android:layout_weight="0.50"/>
                    <View
                        android:id="@+id/progressSpacerView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.50"/>
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/percentageView"
                style="@style/TextAppearance.MudComponents.H5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="50%" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonView"
            style="@style/ButtonAppearance.MudComponents.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mud_dimens_24dp"
            android:text="@string/organism_user_profile_progress_button_text" />
    </LinearLayout>
</androidx.cardview.widget.CardView>