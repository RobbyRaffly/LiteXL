<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/mud_dimens_16dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/mud_dimens_16dp"
        android:layout_height="@dimen/mud_dimens_16dp"
        android:layout_gravity="center_vertical"
        app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
        app:cardCornerRadius="22dp"
        android:layout_marginTop="@dimen/mud_dimens_4dp"
        android:layout_marginEnd="@dimen/mud_dimens_16dp"
        app:cardElevation="@dimen/mud_dimens_0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mud_dimens_16dp"
        android:layout_marginVertical="@dimen/mud_dimens_16dp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/mud_dimens_12dp"
        android:layout_marginEnd="@dimen/mud_dimens_12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/mud_dimens_32dp"
                    android:layout_height="@dimen/mud_dimens_32dp"
                    android:layout_gravity="center_vertical"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_32dp"
                    app:cardElevation="@dimen/mud_dimens_0dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="120dp"
                    android:layout_height="@dimen/mud_dimens_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/mud_dimens_8dp"
                    android:layout_marginEnd="72dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_6dp"
                    app:cardElevation="@dimen/mud_dimens_0dp" />

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="64dp"
                android:layout_height="@dimen/mud_dimens_16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/mud_dimens_8dp"
                android:paddingStart="72dp"
                app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                app:cardCornerRadius="@dimen/mud_dimens_6dp"
                app:cardElevation="@dimen/mud_dimens_0dp" />

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
            app:cardCornerRadius="@dimen/mud_dimens_6dp"
            android:layout_marginTop="@dimen/mud_dimens_20dp"
            android:layout_marginBottom="@dimen/mud_dimens_8dp"
            app:cardElevation="@dimen/mud_dimens_0dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="88dp"
                android:layout_height="@dimen/mud_dimens_24dp"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                app:cardCornerRadius="@dimen/mud_dimens_6dp"
                app:cardElevation="@dimen/mud_dimens_0dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="64dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/mud_dimens_8dp"
                android:layout_marginEnd="48dp"
                app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                app:cardCornerRadius="@dimen/mud_dimens_6dp"
                app:cardElevation="@dimen/mud_dimens_0dp" />
        </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="88dp"
                android:layout_height="@dimen/mud_dimens_16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/mud_dimens_8dp"
                app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                app:cardCornerRadius="@dimen/mud_dimens_6dp"
                app:cardElevation="@dimen/mud_dimens_0dp" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>