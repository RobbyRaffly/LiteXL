<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/containerView"
        android:layout_width="156dp"
        android:layout_height="144dp"
        app:cardBackgroundColor="@color/basicWhite"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        android:layout_margin="@dimen/mud_dimens_8dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/mud_dimens_16dp"
        tools:layout_editor_absoluteX="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/swosh" />

            <TextView
                android:id="@+id/txt_entertainment_type"
                style="@style/TextAppearance.MudComponents.H5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:layout_weight="1"
                android:text="Vidio"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/mud_dimens_16dp"
                android:textAlignment="textStart"
                android:textColor="@color/basicBlack"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="@+id/imageView_box_background"
                app:layout_constraintTop_toBottomOf="@+id/imageView_box_background" />

            <ImageView
                android:id="@+id/imageView_box_background"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="16.64dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/mud_dimens_16dp"
                app:srcCompat="@drawable/background_circle" />

            <com.myxlultimate.component.token.imageView.ImageView
                android:id="@+id/imageView_set_center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="@dimen/mud_dimens_4dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_box_background"
                app:layout_constraintEnd_toEndOf='@+id/imageView_box_background'
                app:layout_constraintStart_toStartOf="@+id/imageView_box_background"
                app:layout_constraintTop_toTopOf="@+id/imageView_box_background"
                app:srcCompat="@drawable/badged_icon_background"
                android:layout_gravity="center"
                app:imageSource=""
                app:imageSourceType="BASE64"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>