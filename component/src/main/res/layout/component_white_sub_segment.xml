<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/subComponentContainer"
    android:background="@color/basicWhite"
    android:orientation="vertical"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/titleViewBill"
        style="@style/TextAppearance.MudComponents.H5"
        android:textColor="@color/basicDarkGrey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="@dimen/mud_dimens_12dp"
        android:text="Subtitle"/>

    <TextView
        android:id="@+id/titleViewBillPeriod"
        android:textColor="@color/basicDarkGrey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:textSize="@dimen/mud_dimens_12dp"
        android:text="Subtitle"/>

    <LinearLayout
        android:id="@+id/itemContainerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

</LinearLayout>