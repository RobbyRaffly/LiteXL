<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mud_dimens_12dp"
        android:minWidth="128dp"
        android:minHeight="@dimen/mud_dimens_16dp"
        app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
        app:cardCornerRadius="@dimen/mud_dimens_6dp"
        android:layout_marginEnd="@dimen/mud_dimens_16dp"
        app:cardElevation="@dimen/mud_dimens_0dp" />

    <include layout="@layout/shimmering_last_transaction_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/mud_dimens_8dp"
        android:layout_marginBottom="@dimen/mud_dimens_8dp"
        android:background="@color/mud_palette_basic_light_grey"/>

    <include layout="@layout/shimmering_last_transaction_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/mud_dimens_8dp"
        android:layout_marginBottom="@dimen/mud_dimens_8dp"
        android:background="@color/mud_palette_basic_light_grey"/>

    <include layout="@layout/shimmering_last_transaction_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/mud_dimens_8dp"
        android:layout_marginBottom="@dimen/mud_dimens_8dp"
        android:background="@color/mud_palette_basic_light_grey"/>

    <include layout="@layout/shimmering_last_transaction_item" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/mud_dimens_8dp"
        android:layout_marginBottom="@dimen/mud_dimens_8dp"
        android:background="@color/mud_palette_basic_light_grey"/>
    <include layout="@layout/shimmering_last_transaction_item" />
</LinearLayout>