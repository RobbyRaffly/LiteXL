<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/mud_dimens_24dp">

    <com.myxlultimate.component.token.imageView.ImageView
        android:id="@+id/emptyStateIcon"
        android:layout_width="@dimen/empty_state_icon_width"
        android:layout_height="@dimen/empty_state_icon_height"
        tools:background="#ccc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/emptyStateText"
        android:layout_width="@dimen/mud_dimens_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mud_dimens_24dp"
        tools:text="Anda baru bisa dapat benefit ini di level selanjutnya. Ayo transaksi terus untuk naik level!"
        style="@style/TextAppearance.MudComponents.H5"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emptyStateIcon"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>