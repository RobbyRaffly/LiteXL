<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="@dimen/mud_dimens_16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.myxlultimate.component.token.imageView.ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:imageSourceType="DRAWABLE"/>

            <TextView
                android:id="@+id/tvMainQuota"
                style="@style/TextAppearance.MudComponents.H5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Main Quota"/>

            <com.myxlultimate.component.atom.inputField.OutlineTextField
                android:id="@+id/otfQuota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:focusable="false"
                app:boxColor="?attr/colorBackground"
                app:isNoPadding="true"
                app:text="0"
                app:endIconMode="dropdown_menu"/>
            <TextView
                style="@style/TextAppearance.MudComponents.H6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GB"
                android:textColor="@color/basicDarkGrey"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>