<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/mud_dimens_4dp"
    android:elevation="@dimen/mud_dimens_3dp"
    app:cardCornerRadius="@dimen/mud_dimens_16dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/mud_dimens_16dp">

        <TextView
            android:id="@+id/titleView"
            style="@style/TextAppearance.MudComponents.H5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/informationView"
            style="@style/TextAppearance.MudComponents.Body3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/mud_dimens_8dp"
            android:textColor="@color/mud_palette_basic_dark_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.myxlultimate.component.atom.inputField.OutlineTextField
                android:id="@+id/quotaWidgetView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number" />

            <TextView
                android:id="@+id/quotaTitleView"
                style="@style/TextAppearance.MudComponents.H6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:gravity="center"
                android:paddingBottom="@dimen/mud_dimens_16dp"
                android:paddingStart="@dimen/mud_dimens_8dp"
                android:paddingEnd="0dp"
                android:textColor="@color/mud_palette_basic_dark_grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/mud_dimens_16dp"
            android:gravity="center">

            <CheckBox
                android:id="@+id/termsTextCheckBoxView"
                style="@style/ButtonAppearance.MudComponents.CheckBox.Primary"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/termsTextView"
                style="@style/TextAppearance.MudComponents.H5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/mud_dimens_8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/applyButtonView"
            style="@style/ButtonAppearance.MudComponents.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.cardview.widget.CardView>