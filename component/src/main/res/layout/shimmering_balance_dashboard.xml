<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/mud_dimens_16dp"
            android:paddingTop="@dimen/mud_dimens_16dp"
            android:paddingBottom="@dimen/mud_dimens_8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="72dp"
                    android:layout_height="@dimen/mud_dimens_16dp"
                    android:layout_marginBottom="@dimen/mud_dimens_8dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="@dimen/mud_dimens_0dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="168dp"
                    android:layout_height="@dimen/mud_dimens_24dp"
                    android:layout_marginBottom="@dimen/mud_dimens_8dp"
                    android:paddingTop="@dimen/mud_dimens_16dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="@dimen/mud_dimens_0dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="168dp"
                    android:layout_height="18dp"
                    android:paddingTop="@dimen/mud_dimens_4dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="@dimen/mud_dimens_0dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingHorizontal="@dimen/mud_dimens_8dp"
                android:paddingTop="@dimen/mud_dimens_8dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/mud_dimens_32dp"
                    android:layout_height="@dimen/mud_dimens_32dp"
                    android:layout_marginBottom="@dimen/mud_dimens_8dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_8dp"
                    app:cardElevation="@dimen/mud_dimens_0dp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="@color/mud_palette_basic_light_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="192dp"
                    android:layout_height="22dp"
                    android:layout_weight="0"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_16dp"
                    app:cardElevation="@dimen/mud_dimens_0dp" />
                <View
                    android:layout_width="@dimen/mud_dimens_0dp"
                    android:layout_height="@dimen/mud_dimens_24dp"
                    android:layout_weight="1"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/mud_dimens_24dp"
                    android:layout_height="22dp"
                    android:layout_weight="0"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_12dp"
                    app:cardElevation="@dimen/mud_dimens_0dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>