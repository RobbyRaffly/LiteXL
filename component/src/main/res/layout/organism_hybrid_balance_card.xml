<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/mud_dimens_16dp"
    app:cardElevation="@dimen/mud_dimens_3dp"
    android:layout_margin="@dimen/mud_dimens_4dp"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/mud_dimens_16dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/topLabelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo PRIO Flex"
            android:textAppearance="@style/TextAppearance.MudComponents.H6"
            android:textColor="@color/mud_palette_basic_dark_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/exclamationMarkView"
            android:layout_marginStart="@dimen/mud_dimens_8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exclamation_mark"
            app:layout_constraintBottom_toBottomOf="@+id/topLabelView"
            app:layout_constraintStart_toEndOf="@+id/topLabelView"
            app:layout_constraintTop_toTopOf="@+id/topLabelView" />

        <TextView
            android:id="@+id/informationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mud_dimens_8dp"
            android:text="Untuk Nelpon ke nomor Non Telco &amp; SMS Banking"
            android:textAppearance="@style/TextAppearance.MudComponents.Body3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topLabelView" />

        <Button
            android:textSize="@dimen/mud_dimens_12dp"
            android:layout_marginTop="@dimen/mud_dimens_8dp"
            android:id="@+id/buttonView"
            style="@style/ButtonAppearance.MudComponents.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atur PRIO FLex"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/informationView" />

        <TextView
            android:id="@+id/balanceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp0"
            android:textAppearance="@style/TextAppearance.MudComponents.H2"
            app:layout_constraintBottom_toBottomOf="@+id/buttonView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/buttonView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>