<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quotaSummaryItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:paddingVertical="8dp"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/iconView"
        style="@style/IconAppearance.MudComponents.H2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/mud_dimens_6dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textColor="@color/mud_palette_basic_black"
        tools:text="@string/xl_call" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/remainingView"
            style="@style/TextAppearance.MudComponents.H5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/mud_palette_basic_black"
            tools:text="200 Minutes" />

        <LinearLayout
            android:id="@+id/addButtonView"
            android:layout_width="@dimen/mud_dimens_16dp"
            android:layout_height="@dimen/mud_dimens_16dp"
            android:layout_marginLeft="@dimen/mud_dimens_2dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="?attr/colorBackgroundPrimary"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                style="@style/IconAppearance.MudComponents.Body3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/mud_palette_basic_white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/unlimitedFlagView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/quota_item_background"
        android:orientation="vertical"
        android:padding="4dp"
        android:visibility="gone">

        <TextView
            style="@style/TextAppearance.MudComponents.H7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/unlimited"
            android:textAlignment="center"
            android:textColor="@color/mud_palette_basic_white" />

    </LinearLayout>

    <TextView
        android:id="@+id/fromFUPView"
        style="@style/TextAppearance.MudComponents.H8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/from_fup"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:paddingVertical="4dp"
        android:textColor="@color/mud_palette_basic_black"
        android:visibility="gone"/>

</LinearLayout>
