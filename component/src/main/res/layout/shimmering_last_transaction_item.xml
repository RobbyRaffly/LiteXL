<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/mud_dimens_24dp"
        android:minHeight="@dimen/mud_dimens_24dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
        app:cardCornerRadius="@dimen/mud_dimens_6dp"
        android:layout_marginEnd="16dp"
        app:cardElevation="@dimen/mud_dimens_0dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="152dp"
            android:minHeight="@dimen/mud_dimens_16dp"
            android:layout_marginBottom="@dimen/mud_dimens_4dp"
            app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
            app:cardCornerRadius="@dimen/mud_dimens_6dp"
            app:cardElevation="@dimen/mud_dimens_0dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="152dp"
            android:minHeight="18dp"
            android:layout_marginBottom="@dimen/mud_dimens_12dp"
            app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
            app:cardCornerRadius="@dimen/mud_dimens_6dp"
            app:cardElevation="@dimen/mud_dimens_0dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:minHeight="16dp"
            app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
            app:cardCornerRadius="@dimen/mud_dimens_6dp"
            app:cardElevation="@dimen/mud_dimens_0dp" />

    </LinearLayout>

</LinearLayout>