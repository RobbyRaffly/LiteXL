<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/BadgedIconEl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.myxlultimate.component.token.icon.IconXl
        android:id="@+id/BadgedIconIcolEl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        app:size="50"
        app:iconCode="@string/xl_notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/BadgedIconNotificationEl"
        android:background="@drawable/badged_icon_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.myxlultimate.component.token.text.TextNotif
            android:id="@+id/BadgedIconNotificationTitleEl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:align="CENTER"
            app:mode="DARK" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>