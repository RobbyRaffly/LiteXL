<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/mud_dimens_4dp"
    android:elevation="@dimen/mud_dimens_4dp"
    app:cardCornerRadius="@dimen/mud_dimens_16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cardText"
            style="@style/TextAppearance.MudComponents.H5"
            android:layout_width="@dimen/mud_dimens_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mud_dimens_16dp"
            android:layout_marginTop="@dimen/mud_dimens_24dp"
            android:layout_marginBottom="@dimen/mud_dimens_24dp"
            tools:text="Live Chat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardIcon"/>

        <com.myxlultimate.component.token.imageView.ImageView
            android:id="@+id/cardIcon"
            android:layout_width="@dimen/mud_dimens_32dp"
            android:layout_height="@dimen/mud_dimens_32dp"
            android:layout_marginEnd="@dimen/mud_dimens_16dp"
            android:layout_marginTop="@dimen/mud_dimens_16dp"
            android:layout_marginBottom="@dimen/mud_dimens_16dp"
            tools:src="@drawable/ic_live_chat"
            app:imageSourceType="BASE64"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>