<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mud_dimens_4dp"
        android:elevation="@dimen/mud_dimens_4dp"
        app:cardCornerRadius="@dimen/mud_dimens_16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/mud_dimens_20dp">

            <LinearLayout
                android:id="@+id/layoutRibbon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/mud_dimens_4dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/ribbonLabel"
                    style="@style/TextAppearance.MudComponents.H7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_ribbon"
                    android:paddingVertical="@dimen/mud_dimens_8dp"
                    android:paddingStart="@dimen/mud_dimens_16dp"
                    android:paddingEnd="@dimen/mud_dimens_16dp"
                    android:textColor="@color/mud_palette_basic_white"
                    tools:text="One Bill" />
            </LinearLayout>

            <View
                android:id="@+id/viewGapRibbon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mud_dimens_16dp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/mud_dimens_24dp"
                android:paddingTop="@dimen/mud_dimens_8dp">

                <com.myxlultimate.component.token.imageView.ImageView
                    android:id="@+id/iconView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:imageSourceType="ASSET" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/mud_dimens_24dp"
                    android:paddingEnd="@dimen/mud_dimens_24dp">

                    <TextView
                        android:id="@+id/nameView"
                        style="@style/TextAppearance.MudComponents.H5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mud_palette_basic_black"
                        tools:text="Gopay" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/balanceView"
                            style="@style/TextAppearance.MudComponents.Body3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/mud_dimens_4dp"
                            android:textColor="@color/mud_palette_basic_black"
                            android:visibility="gone"
                            tools:text="Rp15.000" />

                        <LinearLayout
                            android:id="@+id/bottomView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="@dimen/mud_dimens_4dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tagView"
                                style="@style/IconAppearance.MudComponents.H4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/xl_tag"
                                android:textColor="?attr/colorBackgroundPrimary" />

                            <TextView
                                android:id="@+id/cashbackView"
                                style="@style/TextAppearance.MudComponents.H5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/mud_dimens_4dp"
                                android:textColor="?attr/colorBackgroundPrimary"
                                tools:text="Cashback 20%" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/informationView"
                        style="@style/TextAppearance.MudComponents.Body3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        tools:text="Testing" />

                    <LinearLayout
                        android:id="@+id/descriptionView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/mud_dimens_4dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvDescription"
                            style="@style/TextAppearance.MudComponents.Body3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/mud_palette_basic_red"
                            tools:text="Kartu pembayaran tagihan" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/radioContainerView"
                    android:layout_width="@dimen/mud_dimens_16dp"
                    android:layout_height="@dimen/mud_dimens_16dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/radioButtonInactiveView"
                        android:layout_width="@dimen/mud_dimens_16dp"
                        android:layout_height="@dimen/mud_dimens_16dp"
                        android:background="@drawable/circle_background_stroke"
                        android:backgroundTint="@color/mud_palette_basic_medium_grey"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/radioButtonSetterView"
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="?attr/colorBackgroundPrimary"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/radioButtonDisabledView"
                        android:layout_width="@dimen/mud_dimens_16dp"
                        android:layout_height="@dimen/mud_dimens_16dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/mud_palette_basic_light_grey"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/buttonTopUpView"
                    style="@style/TextAppearance.MudComponents.H5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/organism_payment_method_option_card_top_up"
                    android:textColor="?attr/colorBackgroundPrimary"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/buttonTitleView"
                    style="@style/TextAppearance.MudComponents.H5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ganti Kartu"
                    android:textColor="?attr/colorBackgroundPrimary"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomInformationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/mud_dimens_24dp"
                android:paddingTop="@dimen/mud_dimens_16dp">

                <View
                    android:id="@+id/vLineTitle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/mud_palette_basic_light_grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivTitle" />

                <LinearLayout
                    android:id="@+id/promoInformationView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/mud_dimens_12dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="bottom">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/mud_dimens_12dp"
                            android:background="@drawable/button_background"
                            android:backgroundTint="?attr/colorBackgroundPrimary"
                            android:gravity="bottom"
                            android:minWidth="@dimen/mud_dimens_24dp"
                            android:orientation="vertical"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            tools:ignore="UselessParent">

                            <TextView
                                android:id="@+id/promoBubbleTitle"
                                style="@style/TextAppearance.MudComponents.H8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="1"
                                android:textAlignment="center"
                                android:textColor="@color/mud_palette_basic_white"
                                tools:text="Cashback Rp22.500" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/promoButtonText"
                        style="@style/TextAppearance.MudComponents.H6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:textAlignment="viewEnd"
                        android:textColor="?attr/colorBackgroundPrimary"
                        tools:text="Detail Promo"/>

                </LinearLayout>

                <com.myxlultimate.component.atom.informationView.InformationView
                    android:id="@+id/bottomInformationWarning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/mud_dimens_12dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.myxlultimate.component.atom.informationView.InformationView
        android:id="@+id/bottomInformationWarningUnderCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/mud_dimens_12dp"
        android:visibility="gone" />

</LinearLayout>