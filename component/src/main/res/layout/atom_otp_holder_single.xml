<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:maxWidth="40sp"
    android:minWidth="24sp"
    android:layout_height="44dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.myxlultimate.component.token.text.TextH2
        android:id="@+id/OtpHolderSingleElValue"
        android:layout_width="24sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:align="CENTER"
        app:color="?android:attr/colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/OtpHolderSingleElPad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RelativeLayout
        android:id="@+id/OtpHolderSingleElPad"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/basicLightGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

