<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/iconData"
        style="@style/IconAppearance.MudComponents.H3"
        android:layout_width="@dimen/mud_dimens_24dp"
        android:layout_height="@dimen/mud_dimens_24dp"
        android:gravity="center"
        android:text="@string/xl_internet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelChooser"
        style="@style/TextAppearance.MudComponents.H5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mud_dimens_8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="label"
        android:textColor="@color/mud_palette_solid_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconData"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/quotaChooserView"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/mud_dimens_8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="start"
        android:minWidth="72dp"
        app:boxCornerRadiusBottomEnd="@dimen/mud_dimens_12dp"
        app:boxCornerRadiusBottomStart="@dimen/mud_dimens_12dp"
        app:boxCornerRadiusTopEnd="@dimen/mud_dimens_12dp"
        app:boxCornerRadiusTopStart="@dimen/mud_dimens_12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/labelUnit"
        app:layout_constraintTop_toTopOf="parent"
        app:suffixText="@string/xl_chevron_down"
        app:suffixTextAppearance="@style/IconAppearance.MudComponents.H2"
        app:suffixTextColor="@color/mud_palette_solid_black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/quotaValueView"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:paddingHorizontal="@dimen/mud_dimens_12dp"
            android:paddingVertical="@dimen/mud_dimens_16dp"
            android:text="5"
            android:textAppearance="@style/TextAppearance.MudComponents.Body1"
            android:textColor="@color/mud_palette_solid_black" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelUnit"
        style="@style/TextAppearance.MudComponents.H6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GB"
        android:textColor="@color/mud_palette_basic_dark_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>