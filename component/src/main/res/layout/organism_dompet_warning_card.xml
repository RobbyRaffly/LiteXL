<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardElevation="@dimen/mud_dimens_0dp"
    app:cardCornerRadius="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/mud_dimens_4dp"
        android:paddingHorizontal="@dimen/mud_dimens_8dp"
        android:background="?attr/popUpInfoBackgroundColor"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/mud_dimens_16dp"
            android:layout_height="@dimen/mud_dimens_16dp"
            android:src="@drawable/ic_exclamation_mark"
            android:tint="?attr/colorBackgroundPrimary"
            android:layout_marginRight="@dimen/mud_dimens_8dp"
            />
        <TextView
            android:id="@+id/informationView"
            android:layout_width="wrap_content"
            android:textAppearance="@style/TextAppearance.MudComponents.Body3"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/mud_dimens_6dp"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>