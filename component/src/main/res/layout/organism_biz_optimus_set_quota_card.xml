<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/mud_dimens_4dp"
    android:elevation="@dimen/mud_dimens_3dp"
    app:cardCornerRadius="@dimen/mud_dimens_16dp"
    app:contentPaddingBottom="@dimen/mud_dimens_16dp"
    app:contentPaddingLeft="@dimen/mud_dimens_24dp"
    app:contentPaddingRight="@dimen/mud_dimens_24dp"
    app:contentPaddingTop="@dimen/mud_dimens_16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.myxlultimate.component.organism.profileSelector.ProfileSelector
            android:id="@+id/profileSelectorView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:id="0817 000 123"
            app:textColor="@color/mud_palette_basic_black"
            app:layout_constraintBottom_toTopOf="@id/line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mud_dimens_1dp"
            android:layout_marginTop="@dimen/mud_dimens_12dp"
            android:background="@color/mud_palette_basic_light_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileSelectorView" />


        <com.myxlultimate.component.organism.bizOptimus.bizOptimusQuotaCard.SetQuotaCardItem
            android:id="@+id/bottomQuotaChooser"
            android:layout_width="@dimen/mud_dimens_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/mud_dimens_4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>