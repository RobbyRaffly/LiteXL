<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/mud_dimens_8dp"
    android:paddingTop="@dimen/mud_dimens_16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/iconData"
        style="@style/IconAppearance.MudComponents.H3"
        android:layout_width="@dimen/mud_dimens_24dp"
        android:layout_height="@dimen/mud_dimens_24dp"
        android:layout_marginStart="@dimen/mud_dimens_24dp"
        android:gravity="center"
        android:text="@string/xl_internet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleView"
        style="@style/TextAppearance.MudComponents.H5"
        android:layout_width="@dimen/mud_dimens_0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/mud_dimens_8dp"
        android:text="Kuota Grup Untuk Dibagikan"
        app:layout_constraintBottom_toBottomOf="@id/iconData"
        app:layout_constraintEnd_toStartOf="@id/quotaView"
        app:layout_constraintStart_toEndOf="@id/iconData"
        app:layout_constraintTop_toTopOf="@id/iconData" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/quotaView"
        style="@style/TextAppearance.MudComponents.H5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/mud_dimens_24dp"
        android:text="1459GB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/titleView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/detailTextView"
        style="@style/TextAppearance.MudComponents.Body3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mud_dimens_2dp"
        android:text="Sisa slot anggota 59 orang"
        android:textColor="@color/basicDarkGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/titleView"
        app:layout_constraintTop_toBottomOf="@id/titleView" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mud_dimens_1dp"
        android:layout_marginTop="@dimen/mud_dimens_12dp"
        android:background="@color/mud_palette_basic_light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailTextView"
        app:layout_goneMarginTop="14dp" />

</androidx.constraintlayout.widget.ConstraintLayout>