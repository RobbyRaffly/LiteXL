<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/mud_dimens_16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginBottom="26dp"
            app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
            app:cardCornerRadius="@dimen/mud_dimens_20dp"
            app:cardElevation="@dimen/mud_dimens_0dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/variantPackageCardItemRV"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:paddingEnd="47dp"
            android:paddingStart="0dp"
            tools:listitem="@layout/shimmering_variant_package_card_item"
            android:layout_height="wrap_content" />

    </LinearLayout>


</androidx.cardview.widget.CardView>