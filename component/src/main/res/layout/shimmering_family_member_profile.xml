<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mud_dimens_4dp"
        app:cardCornerRadius="@dimen/mud_dimens_16dp"
        app:cardElevation="@dimen/mud_dimens_3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_direction="left_to_right"
            app:shimmer_shape="linear">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/mud_dimens_16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/firstShimmer"
                    android:layout_width="@dimen/mud_dimens_40dp"
                    android:layout_height="@dimen/mud_dimens_40dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_20dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/secondShimmer"
                    android:layout_width="96dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="@dimen/mud_dimens_8dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_6dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:layout_constraintStart_toEndOf="@id/firstShimmer"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/thirdShimmer"
                    android:layout_width="120dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="@dimen/mud_dimens_8dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_6dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:layout_constraintStart_toStartOf="@id/secondShimmer"
                    app:layout_constraintTop_toBottomOf="@id/secondShimmer" />


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/fourthShimmer"
                    android:layout_width="@dimen/mud_dimens_24dp"
                    android:layout_height="@dimen/mud_dimens_24dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_12dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/fifthShimmer"
                    android:layout_width="72dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="@dimen/mud_dimens_8dp"
                    app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                    app:cardCornerRadius="@dimen/mud_dimens_6dp"
                    app:cardElevation="@dimen/mud_dimens_0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/fourthShimmer"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>