<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tierTitleView"
        style="@style/TextAppearance.MudComponents.H5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/mud_dimens_4dp"
        android:paddingBottom="@dimen/mud_dimens_8dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="@dimen/mud_dimens_16dp"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/iconWrapperView"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:foregroundGravity="center"
            android:orientation="horizontal"
            app:cardCornerRadius="11dp"
            android:layout_marginHorizontal="@dimen/mud_dimens_2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <com.myxlultimate.component.token.imageView.ImageView
            android:id="@+id/loyaltyIcon"
            android:layout_width="@dimen/mud_dimens_16dp"
            android:layout_height="@dimen/mud_dimens_16dp"
            android:layout_gravity="center"
            app:imageSourceType="BASE64" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/transactionInfoView"
            style="@style/TextAppearance.MudComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>