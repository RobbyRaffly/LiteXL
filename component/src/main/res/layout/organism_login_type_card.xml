<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/containerView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="74dp"
    app:cardCornerRadius="@dimen/loginOptionCardRadius"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true"
    android:layout_margin="4dp">

    <View
        android:id="@+id/verticalLine"
        android:layout_width="@dimen/mud_dimens_4dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:paddingHorizontal="@dimen/mud_dimens_16dp"
        android:paddingVertical="17dp">

        <com.myxlultimate.component.token.imageView.ImageView
            android:id="@+id/logoView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            app:imageSourceType="DRAWABLE"
            app:imageSource="@drawable/ic_xlprepaid_48px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleView"
                style="@style/TextAppearance.MudComponents.H5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="XL Prepaid"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/subTitleView"
                style="@style/TextAppearance.MudComponents.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                tools:text="Beserta XL GO IZI"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>