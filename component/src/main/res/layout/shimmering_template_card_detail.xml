<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/mud_dimens_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/mud_dimens_16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/mud_dimens_32dp"
            android:layout_height="@dimen/mud_dimens_32dp"
            android:layout_marginEnd="@dimen/mud_dimens_8dp"
            app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
            app:cardCornerRadius="@dimen/mud_dimens_16dp"
            app:cardElevation="@dimen/mud_dimens_0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="120dp"
                android:layout_height="@dimen/mud_dimens_24dp"
                app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                app:cardCornerRadius="@dimen/mud_dimens_12dp"
                app:cardElevation="@dimen/mud_dimens_0dp" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="64dp"
            android:layout_height="@dimen/mud_dimens_16dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
            app:cardCornerRadius="@dimen/mud_dimens_8dp"
            app:cardElevation="@dimen/mud_dimens_0dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mud_dimens_2dp"
        android:layout_marginBottom="@dimen/mud_dimens_8dp"
        android:background="@color/mud_palette_basic_light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="88dp"
                android:layout_height="@dimen/mud_dimens_24dp"
                app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                app:cardCornerRadius="@dimen/mud_dimens_12dp"
                app:cardElevation="@dimen/mud_dimens_0dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="64dp"
                android:layout_height="@dimen/mud_dimens_16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/mud_dimens_8dp"
                app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
                app:cardCornerRadius="@dimen/mud_dimens_12dp"
                app:cardElevation="@dimen/mud_dimens_0dp" />
        </LinearLayout>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/mud_dimens_24dp"
            android:layout_height="@dimen/mud_dimens_24dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/mud_palette_basic_light_grey"
            app:cardCornerRadius="@dimen/mud_dimens_12dp"
            app:cardElevation="@dimen/mud_dimens_0dp" />
    </LinearLayout>
</LinearLayout>