<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/mud_dimens_4dp"
    android:elevation="@dimen/mud_dimens_4dp"
    android:minHeight="76dp"
    android:paddingVertical="@dimen/mud_dimens_16dp"
    app:cardCornerRadius="@dimen/mud_dimens_16dp">

    <LinearLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <com.myxlultimate.component.token.imageView.ImageView
            android:id="@+id/iconView"
            android:layout_width="@dimen/mud_dimens_24dp"
            android:layout_height="@dimen/mud_dimens_24dp"
            android:layout_marginEnd="25dp"
            app:imageSource="@drawable/ic_last_transaction"
            app:imageSourceType="DRAWABLE" />

        <LinearLayout
            android:id="@+id/circleNotificationView"
            android:layout_width="@dimen/mud_dimens_8dp"
            android:layout_height="@dimen/mud_dimens_8dp"
            android:layout_gravity="top"
            android:layout_marginStart="-8dp"
            android:layout_marginTop="@dimen/mud_dimens_2dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/mud_palette_basic_red"
            android:gravity="top"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/titleUnreadView"
            style="@style/TextAppearance.MudComponents.H6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="@dimen/mud_dimens_4dp"
            android:paddingEnd="@dimen/mud_dimens_16dp"
            tools:text="Selamat ulang tahun Aryo!\nNikmati hadiah special dari XL" />

        <TextView
            android:id="@+id/titleReadView"
            style="@style/TextAppearance.MudComponents.Body3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="@dimen/mud_dimens_4dp"
            android:paddingEnd="@dimen/mud_dimens_16dp"
            android:visibility="gone"
            tools:text="Selamat ulang tahun Aryo!\nNikmati hadiah special dari XL" />

        <LinearLayout
            android:id="@+id/circleView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="?attr/colorAccentDark"
            android:gravity="center"
            android:paddingStart="@dimen/mud_dimens_2dp">

            <TextView
                style="@style/IconAppearance.MudComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xl_chevron_right"
                android:textColor="?android:attr/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>